<?xml version='1.0' encoding='iso-8859-1'?>
<biddingSystem>
	<title>Standard English Acol</title>
	<description>Standard English is an ACOL-like system for beginners, popularised by the English Bridge Union. It uses a weak no-trump opening and a minimum number of conventions; namely Stayman and Blackwood.</description>
	<definitions>
		<context name='openings' >
			<rule name='open-1-suit' >
				<conditions/>
				<ownCalls>
					<call type='bid' denomination='club' level='1' />
					<call type='bid' denomination='diamond' level='1' />
					<call type='bid' denomination='heart' level='1' />
					<call type='bid' denomination='spade' level='1' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='hand-card-points' valueMin='12' valueMax='19' />
					<register player='me' property='suit-card-count' valueMin='4' />
				</implies>
				<responses>
					<scope name='' />
				</responses>
			</rule>
			<rule name='open-1-nt' >
				<conditions/>
				<ownCalls>
					<call type='bid' denomination='no-trump' level='1' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='hand-card-points' valueMin='12' valueMax='14' />
					<register player='me' property='club-card-count' valueMin='2' valueMax='5' />
					<register player='me' property='diamond-card-count' valueMin='2' valueMax='5' />
					<register player='me' property='heart-card-count' valueMin='2' valueMax='4' />
					<register player='me' property='spade-card-count' valueMin='2' valueMax='4' />
				</implies>
				<responses>
					<scope name='' />
				</responses>
			</rule>
			<rule name='open-2-club' >
				<conditions/>
				<ownCalls>
					<call type='bid' denomination='club' level='2' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='hand-card-points' valueMin='23' />
				</implies>
				<responses/>
			</rule>
			<rule name='open-2-suit' >
				<conditions/>
				<ownCalls>
					<call type='bid' denomination='diamond' level='2' />
					<call type='bid' denomination='heart' level='2' />
					<call type='bid' denomination='spade' level='2' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='hand-card-points' valueMin='20' valueMax='22'/>
					<register player='me' property='suit-card-count' valueMin='5' />
				</implies>
				<responses/>
			</rule>
			<rule name='open-2-nt' >
				<conditions/>
				<ownCalls>
					<call type='bid' denomination='no-trump' level='2' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='hand-card-points' valueMin='20' valueMax='22' />
					<register player='me' property='club-card-count' valueMin='2' valueMax='5' />
					<register player='me' property='diamond-card-count' valueMin='2' valueMax='5' />
					<register player='me' property='heart-card-count' valueMin='2' valueMax='4' />
					<register player='me' property='spade-card-count' valueMin='2'  valueMax='4' />
				</implies>
				<responses>
					<scope name='' />
				</responses>
			</rule>
		</context>
		<context name='overcalls' >
			<rule name='double-takeout' >
				<ownCalls>
					<call type='double' />
				</ownCalls>
				<opponentCalls>
					<call type='bid' denomination='club' level='1' />
					<call type='bid' denomination='diamond' level='1' />
					<call type='bid' denomination='heart' level='1' />
					<call type='bid' denomination='spade' level='1' />
				</opponentCalls>
				<implies>
					<register player='me' property='hand-card-points' valueMin='12' />
				</implies>
			</rule>
			<rule name='double-penalty' >
				<ownCalls>
					<call type='double' />
				</ownCalls>
				<opponentCalls>
					<call type='bid' levelMin='3' />
				</opponentCalls>
				<implies/>
			</rule>
		</context>
		<context name='responses' />
		<context name='convention-stayman' >
			<rule name='stayman-init' >
				<ownCalls>
					<call type='bid' denomination='club' level='2' />
					<call type='bid' denomination='club' level='3' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<or>
						<register player='me' property='heart-card-count' valueMin='4' />
						<register player='me' property='spade-card-count' valueMin='4' />
					</or>
				</implies>
				<responses>
					<scope name='convention-stayman' />
				</responses>
			</rule>
			<rule name='stayman-response-diamond' >
				<ownCalls>
					<call type='bid' denomination='diamond' level='2' />
					<call type='bid' denomination='diamond' level='3' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='heart-card-count' valueMax='3' />
					<register player='me' property='spade-card-count' valueMax='3' />
				</implies>
			</rule>
			<rule name='stayman-response-heart' >
				<ownCalls>
					<call type='bid' denomination='heart' level='2' />
					<call type='bid' denomination='heart' level='3' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='heart-card-count' valueMin='4' />
				</implies>
			</rule>
			<rule name='stayman-response-spade' >
				<ownCalls>
					<call type='bid' denomination='spade' level='2' />
					<call type='bid' denomination='spade' level='3' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='heart-card-count' valueMax='3' />
					<register player='me' property='spade-card-count' valueMin='4' />
				</implies>
			</rule>
		</context>
		<context name='convention-blackwood-ace' >
			<rule name='blackwood-init' />
			<rule name='blackwood-response-club' >
				<ownCalls>
					<call type='bid' denomination='club' level='5' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<or>
						<register player='me' property='ace-count' value='0' />
						<register player='me' property='ace-count' value='4' />
					</or>
				</implies>
			</rule>
			<rule name='blackwood-response-diamond' >
				<ownCalls>
					<call type='bid' denomination='diamond' level='5' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='ace-count' value='1' />
				</implies>
			</rule>
			<rule name='blackwood-response-heart' >
				<ownCalls>
					<call type='bid' denomination='heart' level='5' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='ace-count' value='2' />
				</implies>
			</rule>
			<rule name='blackwood-response-spade' >
				<ownCalls>
					<call type='bid' denomination='spade' level='5' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='ace-count' value='3' />
				</implies>
			</rule>
		</context>
		<context name='convention-blackwood-king' >
			<rule name='blackwood-init'>
			</rule>
			<rule name='blackwood-response-club' >
				<ownCalls>
					<call type='bid' denomination='club' level='6' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<or>
						<register player='me' property='king-count' value='0' />
						<register player='me' property='king-count' value='4'  />
					</or>
				</implies>
			</rule>
			<rule name='blackwood-response-diamond' >
				<ownCalls>
					<call type='bid' denomination='diamond' level='6' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='king-count' value='1' />
				</implies>
			</rule>
			<rule name='blackwood-response-heart' >
				<ownCalls>
					<call type='bid' denomination='heart' level='6' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='king-count' value='2' />
				</implies>
			</rule>
			<rule name='blackwood-response-spade' >
				<ownCalls>
					<call type='bid' denomination='spade' level='6' />
				</ownCalls>
				<opponentCalls>
					<call type='pass' />
				</opponentCalls>
				<implies>
					<register player='me' property='king-count' value='3' />
				</implies>
			</rule>
		</context>
	</definitions>
</biddingSystem>
